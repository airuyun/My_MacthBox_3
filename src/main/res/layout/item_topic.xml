<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/item_topic_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80CCCCCC"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_topic_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="热门话题"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/item_tpic_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableRight="@mipmap/icon_arrow_right"
            android:text="更多"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_topic_layout"
        android:background="@drawable/item_back_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_topic_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闻声手册"
            android:textColor="@color/colorArmyGreen"
            android:textSize="@dimen/text_16dp"/>

        <TextView
            android:id="@+id/item_topic_tv_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_topic_tv_name"
            android:layout_below="@id/item_topic_tv_name"
            android:layout_marginTop="5dp"
            android:text="3611浏览"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>