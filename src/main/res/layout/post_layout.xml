<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/post_tv_topicname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="七夕"
        android:textColor="@color/colorArmyGreen"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/post_tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/topic_thread_follow_friend"
            android:textColor="@android:color/darker_gray" />

        <com.a360filemanager.goodsq.my_matchbox_3.view.CircleImageView
            android:id="@+id/post_civ_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_register_avatar_default" />

        <ImageView
            android:id="@+id/post_iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/topic_comments_unfold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/post_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:text="用户名"
        android:textColor="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/post_iv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/post_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#ff4081"
        android:textSize="@dimen/text_12dp"/>

    <TextView
        android:id="@+id/post_tv_is15line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="显示更多"
        android:textColor="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/post_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="时间"
            android:textColor="@android:color/darker_gray" />

        <CheckBox
            android:id="@+id/post_cb_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/like_cb_selector"
            android:text="73"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/post_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/post_cb_like"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_post_comment"
            android:text="1"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/post_tv_comment"
            android:src="@mipmap/icon_post_unfoward" />

    </RelativeLayout>
</LinearLayout>