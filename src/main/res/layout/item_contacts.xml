<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white">

    <com.a360filemanager.goodsq.my_matchbox_3.view.CircleImageView
        android:id="@+id/item_contacts_civ_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_toRightOf="@id/item_contacts_civ_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_contacts_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/colorArmyGreen"
            android:textSize="@dimen/text_16dp"/>
        <TextView
            android:id="@+id/item_contacts_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/colorArmyGreen"
            android:textSize="@dimen/text_16dp"/>
    </LinearLayout>

</RelativeLayout>