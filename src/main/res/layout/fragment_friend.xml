<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@android:color/white">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RadioGroup
        android:id="@+id/match_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/match_rb_firend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/match_tab_firend_selector_left"
            android:button="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="好友"
            android:textColor="@color/match_tab_textcolor" />

        <RadioButton
            android:id="@+id/match_rb_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/match_tab_firend_selector_right"
            android:button="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="喜欢"
            android:textColor="@color/match_tab_textcolor" />
    </RadioGroup>

    <ImageView
        android:id="@+id/match_iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/community_search" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />
</RelativeLayout>

<android.support.v4.view.ViewPager
    android:id="@+id/match_vp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />


</LinearLayout>